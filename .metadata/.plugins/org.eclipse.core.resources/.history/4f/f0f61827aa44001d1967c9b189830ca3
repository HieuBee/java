package Buoi1TH1;

public class Hinhtron {
	private int Bankinh;
	
	public Hinhtron() {
		
	}
	public Hinhtron(int bk) {
		this.Bankinh = bk;
	}
	public void setBankinh(int bk) {
		this.Bankinh = bk;
	}
	public int getBankinh() {
		return Bankinh;
	}
	public void displayChuvi() {
		float C = (float) (2 * Bankinh * 3.14);
		System.out.println("Chu vi hinh tron la:" +C );
	}
	public void displayDientich() {
		float S = (float)(Bankinh * Bankinh * 3.14);
		System.out.println("Dien tich hinh tron la: " + S);
	}
	public class HinhChuNhat {
		private int Cd;
		private int Cr;

		public HinhChuNhat() {
			
		}
		public HinhChuNhat(int Chieudai, int Chieurong) {
			this.Cd = Chieudai;
			this.Cr = Chieurong;
		}
		public void setChieudai(int Chieudai) {
			this.Cd = Chieudai;
		}
		public int getChieudai() {
			return Cd;
		}
		public void setChieurong(int Chieurong) {
			this.Cr = Chieurong;
		}
		public int getChieurong() {
			return Cr;
		}
		public void displayChuvi() {
			int C = (Cd + Cr) * 2;
			System.out.println("Chu vi hinh chu nhat la:" +C );
		}
		public void displayDientich() {
			int S = Cd * Cr;
			System.out.println("Dien tich hinh chu nhat la: " + S);
		}

	}
	public class HinhTamGiac {
		private int a;
		private int b;
		private int c;
		private int h;

		public HinhTamGiac() {
			
		}
		public HinhTamGiac(int ca, int cb, int cc, int ch) {
			this.a = ca;
			this.b = cb;
			this.c = cc;
			this.h = ch;
		}
		public void setCanha(int Canha) {
			this.a = Canha;
		}
		public int getCanha(int Canha) {
			return a;
		}
		public void setCanhb(int Canhb) {
			this.b = Canhb;
		}
		public int getCanhb() {
			return b;
		}
		public void setCanhc(int Canhc) {
			this.c = Canhc;
		}
		public int getCanhc(int Canhc) {
			return c;
		}
		public void setCanhh(int Canhh) {
			this.h = Canhh;
		}
		public int getCanhh() {
			return h;
		}
		public void displayChuvi() {
			int C = a + b + c;
			System.out.println("Chu vi hinh tam giac la:" + C );
		}
		public void displayDientich() {
			int S = c * h;
			System.out.println("Dien tich hinh chu nhat la: " + S);
		}

	}
}
