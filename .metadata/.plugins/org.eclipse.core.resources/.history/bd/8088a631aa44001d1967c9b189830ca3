package BaiTH_Chuong_4;

public class baitap {
	public static void main (String[] args) {
		try {
			int a = 4;
			int b = a / 0;
			System.out.println("Thuong 2 so vua nhap: " + (a / b));
		}
		catch(ArithmeticException e) {
			e.printStackTrace();
		}
		finally {
			System.out.println("Code trong khoi nay luon duoc thuc thi");
		}
		
		System.out.println("<----------------------------->");
		
		try {
			int c =  (Integer) null;
			System.out.println("So nguyen vua nhap " + c);
		}
		catch (NullPointerException e) {
			e.printStackTrace();
		}
		finally {
			System.out.println("Code trong khoi nay luon duoc thuc thi");
		}
		
		System.out.println("<----------------------------->");
		
		try {
			double a = 4;
			double b = -4;
			System.out.println("Cang bac 2 cua  4: " + Math.sqrt(a));
			System.out.println("Cang bac 2 cua  -4: " + Math.sqrt(b));
		}
		catch (Exception e) {
			e.printStackTrace();
		}
		finally {
			System.out.println("Code trong khoi nay luon duoc thuc thi");
		}
		
		System.out.println("<----------------------------->");
		
		try {
			int arr[] = new int[5];
			arr[5] = 7;
			System.out.println("In ra so nguyen " + arr);
		}
		catch (ArrayIndexOutOfBoundsException a) {
			a.printStackTrace();
		}
		finally {
			System.out.println("Code trong khoi nay luon duoc thuc thi");
		}
		
		System.out.println("<----------------------------->");
		
	}
}
