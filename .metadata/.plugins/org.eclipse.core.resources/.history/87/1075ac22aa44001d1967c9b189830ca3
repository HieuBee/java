package TH_2_1;

import java.util.Scanner;

public class Hinhtru extends Hinhtron {
	private int  Chieudai;
	
	public Hinhtru() {
		
	}
	
	 public Hinhtru(int cd, float bk) {
         super();
         this.Chieudai = cd;
     }
	public void setChieudai(int cd) {
		this.Chieudai = cd;
	}
	public int  getChieudai() {
		return Chieudai;
	}
	
	public double tinhDientichxungquanh() {
        return tinhChuvi() * Chieudai;
    }
    public double tinhDientichtoanphan() {
        return 2 * tinhDientich() + tinhDientichxungquanh();
    }
    
    public void nhap1() {
        Scanner sc = new Scanner(System.in);
        super.nhap();
        System.out.print("Nhap chieu dai: ");
        Chieudai=sc.nextInt() ;
    }

    public void xuat1() {
        System.out.println("Dien tich xung quanh: " + tinhDientichxungquanh());
        System.out.println("Dien tich toan phan: " + tinhDientichtoanphan());
        System.out.println("__________________________________");

    }
}
